<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/g"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Nama"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="285dp"
            android:layout_height="224dp"
            android:layout_marginTop="164dp"
            app:layout_constraintEnd_toEndOf="@+id/Nama"
            app:layout_constraintStart_toStartOf="@+id/Nama"
            app:layout_constraintTop_toTopOf="@+id/Nama" />


        <TextView
            android:id="@+id/Deskripsi"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:textSize="17sp"
            app:cardCornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:background="@color/white"/>


        <TextView
            android:id="@+id/teksharga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:text="@string/harga_barang"
            android:textSize="17sp"
            app:cardCornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="@+id/Deskripsi"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@+id/Deskripsi"
            app:layout_constraintTop_toBottomOf="@+id/Deskripsi" />

        <TextView
            android:id="@+id/Harga"
            android:layout_width="314dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:textSize="25sp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/teksharga"
            app:layout_constraintHorizontal_bias="0.477"
            app:layout_constraintStart_toStartOf="@+id/teksharga"
            app:layout_constraintTop_toTopOf="@+id/teksharga" />

        <ImageButton
            android:id="@+id/TombolKirim"
            android:layout_width="245dp"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/tombol"
            app:layout_constraintEnd_toEndOf="@+id/Harga"
            app:layout_constraintHorizontal_bias="0.565"
            app:layout_constraintStart_toStartOf="@+id/Harga"
            app:layout_constraintTop_toTopOf="@+id/Harga" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>