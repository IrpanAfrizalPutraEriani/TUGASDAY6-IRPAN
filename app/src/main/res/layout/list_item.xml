<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CardViewSepatu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:clickable="true"
    app:cardCornerRadius="15dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:id="@+id/RelativeSepatu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333"
        android:backgroundTint="@color/white">

        <ImageButton
            android:id="@+id/Gambar"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_background"
            android:backgroundTint="@color/white"/>

        <TextView
            android:id="@+id/TeksNama"
            android:layout_width="235dp"
            android:layout_height="55dp"
            android:layout_alignTop="@id/Gambar"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/Gambar"
            android:gravity="center"
            android:text="@string/Teks1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrolldeskripsi"
            android:layout_width="245dp"
            android:layout_height="112dp"
            android:layout_below="@id/TeksNama"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_toEndOf="@id/Gambar">

            <TextView
                android:id="@+id/textDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center_horizontal"
                android:text="@string/teksdeskripsi"
                android:textSize="14sp"/>
        </ScrollView>

        <TextView
            android:id="@+id/Rp1"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textHarga1"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/Gambar"
            android:text="@string/Jumlahharga"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textHarga1"
            android:layout_width="250dp"
            android:layout_height="24dp"
            android:layout_below="@id/scrolldeskripsi"
            android:layout_marginStart="2dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/Gambar"
            android:text="@string/Teksharga"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
